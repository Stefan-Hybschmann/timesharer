<h1>Your vacation homes:</h1>

<% @homes.each do |home| %>
  <div class="home-cards">
    <%= link_to "", home_path(home), class: "link-spanner" %>
    <p><%= home.country %></p>
    <p><%= home.city %></p>
    <p><%= home.address %></p>
    <p>Max #<%= home.maximum_no_of_guest %> guests</p>
  </div>
  <hr>
<% end %>

<div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>

