<div class="banner1">
  <%= cl_image_tag @home.photo.key, width: 1600, height: 400,  crop: :fill %>
</div>

<div class="row">
  <div class="col-md-8 offset-md-2 text-warning ">
    <div id="bookings-calendar" data-bookings="<%= @bookings_json %>"></div>
  </div>
</div>

<div class="namer"> <h1> <%= @home.country %></h1> </div>
<div class="butonis">
    <button class="btn border">Check-in</button>
    <button class="btn border"> Check-out</button>
    <button class="btn border"> Guests</button>
</div>

<div class="txt-form">
    <h1>Create a Booking</h1>
</div>

<%= render 'bookings/form', home: @home, booking: @booking %>

<%= link_to "Edit this Home", edit_home_path(@home) %>

<% @home.notes.each do |note| %>
  <div class="note-cards">
    <p>note</p>
  </div>
<% end %>

<%= simple_form_for ([@home, @note]) do |f| %>
  <%= f.input :content %>
  <%= f.submit 'Create Note', class: "btn btn-gradient"%>
<% end %>
