</div>
<div class="my-bookings">
  <h1>My bookings:</h1>
  <div class="bookings-table">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Vacation home</th>
          <th>Check in</th>
          <th>Check out</th>
          <th>Days total</th>
          <th>Number of guests</th>
        </tr>
      </thead>
      <tbody>
        <% @bookings.each do |booking| %>
          <tr>
            <td><%= booking.home.home_name %></td>
            <td><%= booking.start_date %></td>
            <td><%= booking.end_date %></td>
            <td><%= (booking.end_date - booking.start_date).to_i %></td>
            <td><%= booking.no_of_guest %></td>
            <td>
              <%= link_to 'Edit', edit_booking_path(booking) %>
              <%= link_to 'Delete', booking_path(booking), method: :delete, data: { confirm: 'Are you sure?'} %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
